<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "ui red tag label" %>
<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<a class="ui teal ribbon label"><%= current_user.email %></a>
<div class="ui black horizontal label">Joined: <%= current_user.created_at %></div>
<table class="ui table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td>
          <label><%= skill.points %></label>
          <progress value="<%= skill.points %>" max="5"> <%= skill.points %> </progress>
        </td>
        <td><%= link_to 'Show', skill, :class => "ui button mini" %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill), :class => "ui button mini" %></td>
        <td><%= link_to 'Destroy', skill, :class => "ui button negative mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Skill', new_skill_path, :class => "ui button positive" %>
